<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Challenge Image -->
        <ImageView
            android:id="@+id/challengeImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Challenge Icon"
            android:scaleType="centerCrop" />

        <!-- Challenge Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/challengeDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge Description"
                android:textSize="25sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/challengeRewardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reward: X Pulls"
                android:textSize="17sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Claim Button -->
        <Button
            android:id="@+id/claimButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claim"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>